{% extends "partials/layout.html.twig" %}

{% block content %}
<!-- HERO MEDICIÓN -->
<div class="hero-section mb-4">
	<div class="container">
		<div class="d-flex align-items-center">
			<div class="metric-icon-large bg-press me-3">
				<i class="bi bi-speedometer2"></i>
			</div>
			<div>
				<h1 class="display-6 fw-bold mb-0">Presión</h1>
				<p class="text-secondary mb-0">Historial de mediciones de presión atmosférica</p>
			</div>
		</div>
	</div>
</div>

<!-- FILTRO DE FECHAS -->
<div class="container mb-4">
	<div class="filter-card">
		<form action="/presion" method="post" class="row g-3 align-items-end" novalidate>
			<div class="col-md-4">
				<label for="inicio" class="form-label fw-semibold">
					<i class="bi bi-calendar-event me-1"></i>Fecha de inicio
				</label>
				<input type="date" class="form-control form-control-lg" name="inicio" id="inicio">
			</div>
			<div class="col-md-4">
				<label for="final" class="form-label fw-semibold">
					<i class="bi bi-calendar-check me-1"></i>Fecha de fin
				</label>
				<input type="date" class="form-control form-control-lg" name="final" id="final">
			</div>
			<div class="col-md-4">
				<button class="btn btn-prieto btn-lg w-100" type="submit">
					<i class="bi bi-funnel me-2"></i>Filtrar datos
				</button>
			</div>
		</form>
	</div>
</div>

<!-- GRÁFICO -->
<div class="container">
	<div class="chart-container">
		<canvas id="presion"></canvas>
	</div>
</div>

<div class="d-none" id="datos">
	{{ datos }}
</div>
{% endblock %}
{% block javascripts %}
	<script src="/js/presion.js" type="text/javascript"></script>
{% endblock %}
