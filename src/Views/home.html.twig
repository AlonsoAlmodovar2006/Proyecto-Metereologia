	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
		<div class="col">
			<div class="card shadow-sm h-100">
				<img src="img/logo.png" class="card-img-top img-fluid" alt="Alonso Almodóvar">
				<div class="card-body text-center">
					<h5 class="card-title">Alonso Almodóvar</h5>
				</div>
				<div class="card-footer bg-transparent border-0 text-center">
					<small class="text-muted">2006</small>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card shadow-sm h-100">
				<img src="img/logo.png" class="card-img-top img-fluid" alt="Mari Carmen García">
				<div class="card-body text-center">
					<h5 class="card-title">Mari Carmen García</h5>
				</div>
				<div class="card-footer bg-transparent border-0 text-center">
					<small class="text-muted">1996</small>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card shadow-sm h-100">
				<img src="img/logo.png" class="card-img-top img-fluid" alt="Orwin Zabaleta">
				<div class="card-body text-center">
					<h5 class="card-title">Orwin Zavaleta</h5>
				</div>
